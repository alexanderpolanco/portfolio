<style>
  #experience {
    display: flex;
    flex-wrap: wrap;
  }

  .container-experiencies {
    display: flex;
    flex-direction: row;
    padding: 2rem 0;
  }

  .bar {
    position: relative;
    border: 0.5px solid var(--gray-gray-200);
    left: 15px;
  }

  .group-experiencies {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
  }
</style>
